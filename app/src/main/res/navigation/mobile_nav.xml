<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/mobile_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.android.studentapp.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
    <action
        android:id="@+id/action_homeFragment_to_studentDetailsFragment"
        app:destination="@+id/studentDetailsFragment" />
    <action
        android:id="@+id/action_homeFragment_to_addStudentFragment"
        app:destination="@+id/addStudentFragment" />

    </fragment>

    <fragment
        android:id="@+id/studentDetailsFragment"
        android:name="com.example.android.studentapp.StudentDetailsFragment"
        android:label="fragment_student_details"
        tools:layout="@layout/fragment_home">

    </fragment>

    <fragment
        android:id="@+id/addStudentFragment"
        android:name="com.example.android.studentapp.AddStudentFragment"
        android:label="fragment_add_student"
        tools:layout="@layout/fragment_add_student">

    </fragment>

</navigation>